{
  "name": "gmail-graph-classifier-addon",
  "version": "1.0.0",
  "description": "AI-powered Gmail add-on for automatic email classification using knowledge graphs",
  "main": "src/gmail-addon/main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "deploy": "clasp push",
    "deploy:watch": "clasp push --watch"
  },
  "keywords": [
    "gmail",
    "addon",
    "ai",
    "classification",
    "knowledge-graph",
    "google-apps-script"
  ],
  "author": "Gmail Graph-Classifier Team",
  "license": "MIT",
  "devDependencies": {
    "@types/google-apps-script": "^1.0.83",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@google/clasp": "^2.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 100,
        "lines": 95,
        "statements": 95
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "globals": {
      "CardService": "readonly",
      "GmailApp": "readonly",
      "PropertiesService": "readonly",
      "console": "readonly"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": "warn"
    }
  }
}